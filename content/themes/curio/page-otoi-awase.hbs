{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="content-area-wrap">
	{{> mobile-header}}
	<!-- start main content -->
	<div class="container-fluid main-content-wrap">
		<div class="row">
			{{#post}}
			<div class="col-md-8 single-post-wrap">
				<article id="{{id}}" class="{{post_class}} single-post-full" style="min-height: 823px; min-width: 743px;">
					<div class="post-content-wrap">
						<header class="post-header">
								<h2 class="post-title">{{title}}</h2>
						</header>
						{{#if image}}
						<div class="featured-media">
							<img src="{{image}}" alt="{{{title}}}">
						</div>
						{{/if}}
						<div class="post-content-full">
							{{content}}
						</div>
            <p>
              <div name="form308" id="formAnchor308" ></div><script  type="text/javascript" src="http://spiceforms.com/app/public/js/iframeResizer.min.js"></script><script type="text/javascript">
                EmbedManager.embed({
                  key: "http://spiceforms.com/app/public/forms/embedded",
                  width: "100%",
                  mobileResponsive: true,
                  embedId:'308'
                });
                iFrameResize({checkOrigin:false});
              </script>
            </p>
					</div>
				</article>
			</div>
			{{/post}}
		</div>
	</div>
	<!-- end main content -->
</div>
